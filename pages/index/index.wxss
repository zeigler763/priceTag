.left {
  float: left;
}

.right {
  float: right;
}

.page_body {
  overflow: hidden;
}

.top_nav {
  width: 100%;
  height: 436rpx;
  position: relative;
  margin-bottom: 30rpx;
} 
  
.top_bg {
  width: 100%;
  height: 100%;
} 

.back_view {
  position: absolute;
  top: 40rpx;
  left: 0px;
  width: 100%;
}

.top_avatar_btn {
  width: 120rpx;
  height: 120rpx;
  margin: 0rpx 20rpx 0rpx 40rpx;
  border-radius: 50%;
  float: left;
  padding: 0;
  border: none;
}

.top_avatar {
  width: 120rpx;
  height: 120rpx;
}

.top_label {
  color: white;
  font-size: 44rpx;
  line-height: 120rpx;
  align-content: center;
  float: left;
}

.top_search_code {
  width: 42rpx;
  height: 42rpx;
  float: right;
  padding: 39rpx 44rpx 0rpx 0rpx;
}

.top_count_label {
  width: 100%;
  float: left;
  font-size: 26rpx;
  color: white;
  margin-top: 70rpx;
  margin-left: 68rpx;
}

.top_count {
  width: 100%;
  float: left;
  font-size: 120rpx;
  color: white;
  margin-top: 0rpx;
  font-weight: 900;
  line-height: 120rpx;
}

.top_num_label {
  font-size: 22rpx;
  margin-left: 12rpx;
}

.scroll-view-x {
  height: 60rpx;
  white-space: nowrap;
  display: flex;
  padding-bottom: 10rpx;
}

.hearder_title {
  line-height: 56rpx;
  text-align: center;
  padding: 0 30rpx;
  color: #3c3c3c;
  margin: 0 15rpx 0 15rpx;
  font-size: 28rpx;
  border: solid #ddd 1rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.hearder_title_current {
   color: white;
   background-color: #e31f1f;
   border: solid #e31f1f 1rpx;
}

.card_list {
  width: 100%;
  height: 62px;
  margin-top: 10px;
  display: flex;
}

.card_side {
  height: auto;
  width: 48rpx;
  padding-left: 15rpx;
}

.card_content {
  height: 122rpx;
  margin-right: 15rpx;
  border-width: 1rpx 1rpx 1rpx 0;
  border-color: #ddd;
  border-style: solid;
  display: flex;
  flex-direction: column;
}

.card_content_top {
  height: 44rpx;
  border-width: 0px 0px 1rpx 0;
  border-color: #ddd;
  border-style: solid;
  display: flex;
  justify-content: space-between;
}

.card_content_top text {
    font-size:18rpx;
    color:#333;
    line-height: 46rpx;
    height: 46rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}

.card_content_top image {
    height: 22rpx;
    width: 22rpx;
    padding: 10rpx 14rpx;
}

.card_content_bottom {
  height: 78rpx;
  display: flex;
  justify-content: space-between;
}

.card_content_bottom text {
  font-size:28rpx;
  color: #333;
  font-weight: 800;
  line-height: 78rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  padding-left: 15rpx;
}

.card_content_bottom image {
    height: 29rpx;
    width: 32rpx;
    padding: 24rpx 14rpx;
}

.card_list_flag {
  width: 100%;
  height: 162px;
  margin-top: 10px;
  display: flex;
}



  