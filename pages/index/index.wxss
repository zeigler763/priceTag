.left {
  float: left;
}

.right {
  float: right;
}

.page_body {
  overflow: hidden;
}

.fixed {
  position: fixed;
  top: 0;
}

.top_nav {
  width: 100%;
  height: 436rpx;
  position: relative;
} 
  
.top_bg {
  width: 100%;
  height: 100%;
} 

.back_view {
  position: absolute;
  top: 40rpx;
  left: 0px;
  width: 100%;
}

.top_avatar_btn {
  width: 120rpx;
  height: 120rpx;
  margin: 0rpx 20rpx 0rpx 40rpx;
  border-radius: 50%;
  float: left;
  padding: 0;
  border: none;
}

.top_avatar {
  width: 120rpx;
  height: 120rpx;
}

.top_label {
  color: white;
  font-size: 44rpx;
  line-height: 120rpx;
  align-content: center;
  float: left;
}

.top_search_code {
  width: 42rpx;
  height: 42rpx;
  float: right;
  padding: 39rpx 44rpx 0rpx 0rpx;
}

.top_count_label {
  width: 100%;
  float: left;
  font-size: 26rpx;
  color: white;
  margin-top: 70rpx;
  margin-left: 68rpx;
}

.top_count {
  width: 100%;
  float: left;
  font-size: 120rpx;
  color: white;
  margin-top: 0rpx;
  font-weight: 900;
  line-height: 120rpx;
}

.top_num_label {
  font-size: 22rpx;
  margin-left: 12rpx;
}

.scroll-view-x {
  white-space: nowrap;
  display: flex;
  background-color: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.hearder_title {
  line-height: 56rpx;
  text-align: center;
  padding: 0 30rpx;
  color: #3c3c3c;
  margin: 0 15rpx 0 15rpx;
  font-size: 28rpx;
  border-width: 2rpx;
  border-color: #ddd;
  border-style: solid;
  /* box-shadow: 2rpx 0rpx 2rpx 2rpx #ddd; */
  border-radius: 30rpx;
  display: inline-block;
}

.hearder_title_current {
   color: white;
   background-color: #e31f1f;
}

.card_list {
  width: 100%;
  margin-top: 10px;
  display: flex;
}

.card_side {
  height: 248rpx;
  width: 48rpx;
  padding-left: 15rpx;
}

.card_content {
  height: 122rpx;
  margin-right: 15rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.card_content_top {
  height: 44rpx;
  border-width: 0px 0px 1rpx 0;
  border-color: #ddd;
  border-style: solid;
  display: flex;
  justify-content: space-between;
}

.card_content_top text {
    font-size:18rpx;
    color:#333;
    line-height: 46rpx;
    height: 46rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}

.card_content_top image {
    height: 22rpx;
    width: 22rpx;
    padding: 10rpx 14rpx;
}

.card_content_bottom {
  height: 78rpx;
  display: flex;
  justify-content: space-between;
}

.card_content_bottom text {
  font-size:28rpx;
  color: #333;
  font-weight: 800;
  line-height: 78rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  padding-left: 15rpx;
}

.card_content_bottom image {
    height: 29rpx;
    width: 32rpx;
    padding: 24rpx 14rpx;
}

.card_list_flag {
  width: 100%;
  margin-bottom: 10px;
  display: flex;
}

.card_list_flag_content {
  margin-right: 15rpx;
  /* box-shadow: 1rpx 2rpx 3rpx 3rpx #ddd; */
  display: flex;
  flex-direction: column;
  flex: 1;
}

.card_list_flag_content_top {
  display: flex;
  box-shadow: 1rpx 2rpx 3rpx 3rpx #ddd;
}

.card_flag_title {
  color: #3c3c3c;
  font-size: 26rpx;
  font-weight: 600;
  padding: 24rpx 30rpx 0 0;
}

.card_flag_shop {
  color: #bdbdbd;
  font-size: 24rpx;
  padding: 20rpx 30rpx 0 0;
}

.card_flag_price {
  color: #b31719;
  font-size: 24rpx;
  padding: 20rpx 30rpx 0 0;
  font-weight: 700;
}

.limit_line {
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.card_list_flag_content_bottom {
  display: flex;
  flex-direction: column;
  background-color: #fcf4d9;
  margin: 0 30rpx;
  box-shadow: 1rpx 2rpx 3rpx 3rpx #ddd;
}

.card_list_flag_content_bottom text {
  font-size: 28rpx;
  padding-left: 24rpx;
  padding-top: 16rpx;
}

.card_list_flag_content_bottom_des {
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}



  